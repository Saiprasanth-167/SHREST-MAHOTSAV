{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/home.html" },
    { "source": "/index.html", "destination": "/home.html" },
    { "source": "/shrestregistration", "destination": "/public/shrestregistration.html" },
    { "source": "/events", "destination": "/public/events.html" },
    { "source": "/qrscanner", "destination": "/public/qrscanner.html" },
    { "source": "/celebration", "destination": "/public/celebration.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}